@model EduShop_Unsecure.Models.ProductModel

<link href="~/Content/Product.css" rel="stylesheet" />
<link href="~/Content/star-rating.css" rel="stylesheet" />

<h2>ProductInfo</h2>
<article class="contentcontainer">
    <div style="margin-top:20px;">
        <link href="~/Content/Product.css" rel="stylesheet" />

        <div>
            @Html.Action("Sidebar", "Home")
        </div>

        <article class="col-md-9">
            <section>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title"><span class="glyphicon glyphicon-th"></span>@Model.Category</h4>
                    </div>

                    <div class="col-md-6">
                        <div class="thumbnail">
                            <img src="@Url.Content(Model.ImgUrl)" alt="" />
                            <div class="caption">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h3 style="display:inline;">@Model.Name</h3>
                        <input id="input-id" type="number" class="rating" min=0 max=5 step="0.5" data-size="xs" data-rtl="false"
                               value="@Model.AverageRating" data-readonly="true" data-show-clear="false" data-show-caption="false">
                        <p>@Model.ShortDescription</p>
                        <br />
                        <a href="#">
                            <div class="btn-group btn-group-justified btn-group-lg">

                                <h2 class="btn btn-danger btn-lg"> @Model.Price €</h2>


                                <h2 class="btn btn-primary btn-lg" role="button">Add to Cart <span class="glyphicon glyphicon-shopping-cart"></span></h2>

                            </div>
                        </a>
                        <br />
                        

                        <a data-toggle="modal" data-target="#myModal" class="review-link">Write a Review</a>
                        
                        <!-- Modal -->
                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                        <h4 class="modal-title" id="myModalLabel">Review</h4>
                                    </div>
                                    @Html.Action("Review","Home")
                                </div>
                            </div>
                        </div>
                        
                        

                    </div>
                    <div style="clear:both"></div>
                    <div class="col-md-12">

                        <ul class="nav nav-tabs nav-justified" role="tablist">
                            <li><a href="#Information" class="active" role="tab" data-toggle="tab">Information</a></li>
                            <li><a href="#Reviews" role="tab" data-toggle="tab">Reviews</a></li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane fade in active" id="Information">
                                <h1>@Model.Name</h1>
                                <p>
                                   @Model.Description
                                </p>
                            </div>

                            <div class="tab-pane fade" id="Reviews">
                                @Html.Action("Comment", "Home")
                            </div>
                        </div>

                    </div>
                </div>
            </section>
        </article>
    </div>
    <div style="clear:both"></div>
</article>
